{% block _annonce_images_widget %}
<p>ajouter vos propres images !</p>

{{ form_widget(form) }}

<input type="hidden" id="widgets-counter" value="0">


<div class="form-group">
  <button type="button" class="btn btn-primary" id="add-image">
    <i class="fas fa-plus"></i>
    Ajouter une image
  </button>
</div>
{% endblock _annonce_images_widget %}

{% block _annonce_images_entry_row %}
{{ form_widget(form) }}
{% endblock _annonce_images_entry_row %}

{% block _annonce_images_entry_widget %}
<div class="form-group" id="block_{{id}}">
  <div class="row">
    <div class="col-10">
      <div class="row">
        <div class="col">
          {{ form_widget(form.url) }}
        </div>
        <div class="col">
          {{ form_widget(form.caption) }}
          {{ form_errors(form.caption)}}
          {{ form_errors(form.url)}}
        </div>
      </div>
    </div>
    <div class="col-2">
      <button type="button" data-action="delete" data-target='#block_{{id}}' class="btn btn-danger">X</button>



    </div>
  </div>
</div>
{% endblock _annonce_images_entry_widget %}