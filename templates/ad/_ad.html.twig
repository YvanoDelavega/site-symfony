{% set pathurl = path('ads_show', { slug: ad.slug }) %}

<div class="col-md-4">
    <div class="card bg-light mb-3">
        <card class="card-header text-center">
            {{ ad.rooms }} chambres, <strong>{{ ad.price |number_format(2, ',', ' ') }} &euro; / nuit</strong>
            <br />

{% if ad.comments|length>0 %}
{% include 'partials/rating.html.twig' with {'rating': ad.AvgRating} %}
{% else %}
<small>pas encore not√©</small>

{% endif %}

            
        </card>
        <a href="{{ pathurl }}">
            <img src="{{ ad.coverImage }}" alt="image de l'appartement" style="height: 200px; width:100%;
                display:block" />
        </a>

        <div class="card-body">
            <a href="{{ pathurl }}">
                <h4 class="card-title">{{ ad.title }}</h4>
            </a>
            <p class="card-text">
                {{ ad.introduction }}
            </p>
            <a href="{{ pathurl }}" class="btn btn-primary float-right">en savoir plus</a>
            {% if app.user is same as (ad.author) %}
    <a href="{{ path('ads_edit', {'slug':ad.slug}) }}" class="btn btn-secondary">Modifier l'annonce</a>
    {% endif %}
        </div>
    </div>
</div>