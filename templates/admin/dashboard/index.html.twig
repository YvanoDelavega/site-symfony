{% extends 'admin/base.html.twig' %}

{% block title %}Tableau de board{% endblock %}

{% block body %}

<div class="container-fluid">
    <div class="row">
        <div class="col">
            <div class="card bg-primary text-white mb-3 text-center">
                <div class="card-body">
                    <div class="row">
                        <div class="col-4">
                            <i class="fas fa-users fa-3x"></i>
                        </div>
                        <div class="col-8">
                            <h4 class="card-title">{{ stats.users}} utilisateurs</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card bg-dark text-white mb-3 text-center">
                <div class="card-body">
                    <div class="row">
                        <div class="col-4">
                            <i class="fas fa-hotel fa-3x"></i>
                        </div>
                        <div class="col-8">
                            <h4 class="card-title">{{ stats.ads}} annonces</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card bg-warning text-white mb-3 text-center">
                <div class="card-body">
                    <div class="row">
                        <div class="col-4">
                            <i class="fas fa-folder fa-3x"></i>
                        </div>
                        <div class="col-8">
                            <h4 class="card-title">{{ stats.bookings}} r√©servations</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card bg-success text-white mb-3 text-center">
                <div class="card-body">
                    <div class="row">
                        <div class="col-4">
                            <i class="fas fa-comments fa-3x"></i>
                        </div>
                        <div class="col-8">
                            <h4 class="card-title">{{ stats.comments}} commentaires</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <hr>

    <div class="row">
        <div class="col">
            <div class="alert alert-success">
                <div class="alert-heading my-3">
                    <h2>
                        <i class="fas fa-arrow-up"></i>
                        Les annonces populaires
                    </h2>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Annonce</th>
                                <th>proprio</th>
                                <th class="text-center">Moyenne</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for a in bestAds %}
                            <tr>
                                <td>{{ a.title }}</td>
                                <td>
                                    <img src="{{a.picture}}" alt="" class="avatar avatar-micro">
                                    {{ a.firstName }} {{a.lastName }}</td>
                                <td class="text-center">
                                    <span class="badge badge-dark">
                                        {{ a.note | number_format(1, ',', ' ')}}</td>
                                </span>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="alert alert-danger">
                <div class="alert-heading my-3">
                    <h2>
                        <i class="fas fa-arrow-down"></i>
                        Les pires annonces
                    </h2>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Annonce</th>
                                <th>proprio</th>
                                <th class="text-center">Moyenne</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for a in worstAds %}
                            <tr>
                                <td>{{ a.title }}</td>
                                <td>
                                    <img src="{{a.picture}}" alt="" class="avatar avatar-micro">
                                    {{ a.firstName }} {{a.lastName }}</td>
                                <td class="text-center">
                                    <span class="badge badge-dark">
                                        {{ a.note | number_format(1, ',', ' ')}}</td>
                                </span>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>


{% endblock %}