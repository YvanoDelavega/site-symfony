{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}

<div class="container">
    <h1 class="my-5">Inscrivez-vous sur notre site !</h1>

    {{ form_start(form )}}
    <div class="row">
        <div class="col">
            <div class="alert alert-light clearfix">
                <h2 class="alert-heading">Informations générales</h2>
                <hr>
                {{form_row(form.firstName)}}
                {{form_row(form.lastName)}}
                {{form_row(form.email)}}
                {{form_row(form.picture)}}

                <br>
               
            </div>
        </div>
        <div class="col">

            <div class="alert alert-light clearfix">
                <h2 class="alert-heading">Mot de passe</h2>
                <hr>
                {{form_row(form.hash)}}
                {{form_row(form.passwordConfirm)}}
            </div>

            <div class="alert alert-light clearfix">
                <h2 class="alert-heading">Détails de l'annonces</h2>
                <hr>
                {{form_row(form.introduction)}}
                {{form_row(form.description)}}
            </div>
        </div>
    </div>

    <p>Vous y êtes presque. Confirmer votre inscription et rejoingez nous</p>
    <button class="btn btn-success" type="submit">
        <i class="fas fa-check"></i>
        Confirmez votre inscription</button>
        <br>

    {{form_end(form)}}
</div>

{% endblock %}